emupid=0

inotifywait -rm -e CLOSE_WRITE ./* | while read file action; do
  if [[ ${file} =~ .*\.(ino|cpp|h|hpp)$ ]]; then
    echo "Changed source: '$file'"
    sleep 1

    ./b

    success=$?

    if [ $success -eq 0 ] && [ $emupid -eq 0 ]; then
       xdg-open build/PodManager.ino.hex
       emupid=1    
    fi
    
  fi
done

